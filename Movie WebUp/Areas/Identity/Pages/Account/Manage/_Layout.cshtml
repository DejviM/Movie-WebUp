@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container mt-5" style="min-height:100vh;">
    <div class="text-center mb-4">
        <h1 class="text-white display-4 font-weight-bold">Manage Your Account</h1>
        <h2 class="text-white font-weight-light">Change your account settings</h2>
    </div>

    <hr class="border-light" />

    <div class="row justify-content-center">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

<style>
    /* Main container */
    .container {
        max-width: 1200px;
        padding: 0 15px;
    }

    /* Centered headings */
    h1 {
        font-size: 3rem;
        color: #ff9800;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }

    h2 {
        font-size: 1.8rem;
        color: #fff;
    }

    /* Flexbox layout for the account management page */
    .row {
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    /* Column styling for the navigation and content */
    .col-md-3 {
        padding: 0;
    }

    .col-md-9 {
        background-color: #2c2c2c;
        padding: 20px;
        border-radius: 10px;
    }

    /* Styling for the <hr /> separator */
    hr {
        border-top: 1px solid #555;
        margin-top: 30px;
        margin-bottom: 30px;
    }

    /* Navigation bar styling */
    .nav {
        background-color: #1e1e1e;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
    }

    .nav-link {
        color: #ff9800;
        font-weight: bold;
        transition: color 0.3s ease;
    }

        .nav-link:hover {
            color: #e68900;
        }
</style>
