@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}

<style>
    /* Center the logout container */
    .logout-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Logout card */
    .logout-card {
        background: rgba(30, 30, 30, 0.9);
        border-radius: 10px;
        padding: 40px;
        text-align: center;
        box-shadow: 0px 4px 10px rgba(255, 152, 0, 0.3);
        max-width: 400px;
        width: 100%;
    }

        /* Title */
        .logout-card h1 {
            font-size: 2rem;
            font-weight: 600;
            color: #ff9800;
            margin-bottom: 15px;
        }

        /* Text */
        .logout-card p {
            font-size: 1.1rem;
            color: #ccc;
            margin-bottom: 20px;
        }

    /* Button */
    .logout-btn {
        display: inline-block;
        background-color: #ff9800;
        color: white;
        font-weight: 600;
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(255, 152, 0, 0.3);
    }

        /* Button Hover */
        .logout-btn:hover {
            background-color: #e68900;
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(255, 152, 0, 0.5);
        }

</style>

<!-- Logout Page -->
<div class="logout-container">
    <div class="logout-card">
        <h1>@ViewData["Title"]</h1>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p>Are you sure you want to log out?</p>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="logout-btn">Log Out</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out.</p>
        }
    </div>
</div>
