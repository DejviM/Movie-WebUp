@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* General Styles */
    body {
        font-family: 'Poppins', sans-serif;
        color: #fff;
    }

    h1, h2 {
        font-weight: 600;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 15px;
    }

    p {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #ccc;
    }

    /* Form Container */
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh; /* Center the form vertically */
    }

    .col-md-4 {
        background-color: #1e1e1e; /* Slightly lighter than background */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        width: 100%;
        max-width: 400px; /* Limit form width */
    }

    /* Form Elements */
    .form-floating {
        margin-bottom: 20px;
    }

    .form-control {
        background-color: #333;
        color: #fff;
        border: 1px solid #555;
        padding: 10px;
        border-radius: 5px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff9800;
            box-shadow: 0 0 5px rgba(255, 152, 0, 0.5);
            outline: none;
        }

    .form-label {
        font-weight: 500;
        color: #fff;
    }

    .text-danger {
        color: #ff4444 !important; /* Red for validation errors */
    }

    /* Checkbox Styles */
    .checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .form-check-input {
        margin-right: 10px;
        background-color: #333;
        border: 1px solid #555;
    }

        .form-check-input:checked {
            background-color: #ff9800;
            border-color: #ff9800;
        }

    /* Button Styles */
    .btn-primary {
        background-color: #ff9800;
        border: none;
        font-weight: 500;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e68900;
        }

    /* Link Styles */
    a {
        color: #ff9800; /* Orange accent color */
        text-decoration: none;
        transition: color 0.3s ease;
    }

     a:hover {
            color: #e68900; /* Darker orange on hover */
     }

</style>

<h1 class="text-white">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3 text-white">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
