<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie_WebUp</title>
    <script type="importmap"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />


</head>
<body class="bg-black d-flex flex-column min-vh-100">
    <!-- Ensures full height for footer placement -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Movies/Movie_List">Movie List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Movies/Category">Category</a>
                        </li>
                    </ul>

                    <!-- Right Side - Authentication Links -->
                    <ul class="navbar-nav d-flex align-items-center">
                        <!-- Aligning items -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2">
                                <!-- Added spacing -->
                                <a class="nav-link text-white profile-link" asp-area="Identity" asp-page="/Account/Manage/Index" style="font-size: 0.9rem;">
                                    <u>@User.Identity.Name</u>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 d-flex flex-column">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white mt-auto">
        <!-- Ensures footer sticks to bottom -->
        <div class="container-fluid p-5 bg-dark text-white">
            <div class="d-flex flex-column justify-content-center align-items-center text-center">
                <!-- Logo -->
                <div class="mb-4">
                    <img src="/css/smart_tech_al_logo-removebg-preview.png" alt="Movie WebUp Logo" class="img-fluid" style="max-height: 100px;">
                </div>

                <!-- Social Media Links -->
                <div class="mb-4">
                    <a href="https://linkedin.com" class="mx-2 text-primary"><i class="bi bi-linkedin fs-4"></i></a>
                    <a href="https://facebook.com" class=" mx-2 text-info"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="mailto:example@example.com" class="mx-2 text-danger"><i class="bi bi-envelope fs-4"></i></a>
                    <a href="https://github.com" class="mx-2 text-black"><i class="bi bi-github fs-4"></i></a>
                </div>

                <!-- Contact Us Link -->
                <div>
                    <a asp-page="/Movies/Contact" class="text-white">Contact Us</a>
                </div>
            </div>
        </div>
        <div class="text-center p-3 mt-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2025 Copyright: Movie WebUp <a asp-page="/Movies/Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <!-- Bootstrap 5 JS Bundle (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Syncfusion ASP.NET Core Script Manager -->
    <ejs-scripts></ejs-scripts>
 </body>
</html>

